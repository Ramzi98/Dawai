<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Date de début :"
                android:textColor="@color/noir" />

            <TextView
                android:id="@+id/date_debut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="select_date"
                android:text="Selectioner la date"
                android:textColor="@color/blue_600" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Durée :"
            android:textColor="@color/noir" />

        <RadioGroup
            android:id="@+id/duree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/continu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continu" />

            <RadioButton
                android:id="@+id/nbr_jours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de jours" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Jours :"
            android:textColor="@color/noir" />

        <RadioGroup
            android:id="@+id/jours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/tous_les_jours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tous les jours" />

            <RadioButton
                android:id="@+id/jours_specifique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jour spécifique de la semaine" />

            <RadioButton
                android:id="@+id/intervalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jours d'intervalle" />

            <RadioButton
                android:id="@+id/cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cycle" />
        </RadioGroup>

    </LinearLayout>


</RelativeLayout>